class Util
	@setXCenter = (displayObject, container)->
		if container != undefined
			if container instanceof Phaser.Group
				return false if container.getIndex(displayObject) == -1
			displayObject.x = container.width/2 - displayObject.width/2
		else if p = displayObject.parent
			index = p.getIndex(displayObject)
			p.remove(displayObject)
			displayObject.x = p.width/2 - displayObject.width/2
			p.addAt(displayObject, index)

	@setYCenter = (displayObject, container)->
		if container != undefined
			return false if container.getIndex(displayObject) == -1
			displayObject.y = container.height/2 - displayObject.height/2
		else if p = displayObject.parent
			index = p.getIndex(displayObject)
			p.remove(displayObject)
			displayObject.y = p.height/2 - displayObject.height/2
			p.addAt(displayObject, index)

	@setCenter = (displayObject, container)->
		@setXCenter(displayObject, container)
		@setYCenter(displayObject, container)