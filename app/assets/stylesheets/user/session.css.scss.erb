#liter-logo{
  position: fixed;
  top: 40px;
  left: 96px;
}
#return-database{
  position: fixed;
  right: 50px;
  top: 50px;
  font-size: 18px;
  background-color: #AAA;
  color: #EEE;
  padding: 5px 15px;
  border-radius: 3px;
}
#player-login{
  width: 400px;
  text-align: center;
  padding: 32px;
  margin: 360px auto auto;
  background-image: url("<%= image_path('login/login-dialog-background.png') %>");
  background-size: 100% 100%;
  background-repeat: no-repeat;
  input{
    font-size: 24px;
    margin-top: 12px;
    margin-bottom: 4px;
    width: 14em;
  }
  .submit-field{
    margin-top: 16px;
    text-align: center;
  }
  #register-link{
    margin-top: 10px;
    text-align: right;
    a{
      color: green;
    }
  }
  #submit{
    text-align: center;
    background: #A6937C;
    width: 160px;
    font-size: 20px;
    color: #DDD;
  }
  z-index: 1;
}

#login-title{
  position: fixed;
  top: 280px;
  width: 100%;
  margin: 0 auto;
  text-align: center;
}
#login-background{
  position: fixed;
  top: 120px;
  background-size: 100% 100%;
  background-image: url("<%= image_path('background-qmsht.jpg') %>");
  width: 100%;
  height: 760px;
  background-repeat: no-repeat;
  z-index: -1;
}

#copy-right{
  text-align: center;
  color: gray;
  font-weight: 600;
  font-size: 13px;
  height: 40px;
  width: 100%;
  line-height: 1.5em;
  // background-image: url("<%= image_path('login/copyright.png') %>");
