.glyph-screen{
  canvas{
    margin: 0 auto;
  }
}
#main-header{
  height: 120px;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-image: url("<%= image_path('main/header.jpg') %>");
}

#content{
  width: 1080px;
  margin: -10px auto;
  position: relative;
}
$menu-width: 140px;
$menu-left: 30px;

#menu{
  width: 140px;
  position: relative;
  left: $menu-left;
  // left: $menu-left;
}

$main-menu-header-height: 60px;
#main-menu-header{
  width: $menu-width;
  height: $main-menu-header-height;
  background-image: url("<%= image_path('main/menu-header-background.png') %>"); ;
  text-align: center;
  line-height: 2.5em;
  color: #EEE;
  font-size: 24px;
  font-weight: 300;
  font-family: '微软雅黑', 'msyh';
}

$tree-color: #DDD;
$tree-header-size: 20px;
$tree-margin-top: 10px;
.tree-base-header{
  $size: $tree-header-size;
  width: $size;
  height: $size;
  border-radius: $size;
  border: solid 4px $tree-color;
}

$tree-body-padding-top: 15px;
$tree-body-padding-bottom: $tree-body-padding-top*2;
.tree-base-body{
  margin: -2px auto;
  padding-top: $tree-body-padding-top;
  padding-bottom: $tree-body-padding-bottom;
  width: 4px;
  background-color: $tree-color;
  text-align: center;
}

.tree-select:nth-child(1){
  margin-top: 15px;
}

$tree-select-size: 12px;
.tree-select{
  $size: $tree-select-size;
  margin-left: ($size/2 - 2px)*-1;
  & + &{
    margin-top: 40px;
  }
  width: $size;
  height: $size;
  background-color: $tree-color;
  border-radius: $size;
  &.active{
    background-color: darken($tree-color, 30%);
  }
}

#select-titles{
  position: absolute;
  top: $tree-margin-top + $tree-body-padding-top*2 + $tree-header-size - 6px;
  left: 45px;
}

.select-title{
  font-size: 18px;
  margin-bottom: 31px - (16px - $tree-select-size);
  font-family: '微软雅黑', msyh;
  color: darken($tree-color, 20%);
  &.active{
    color: #80CFCB;
    font-weight: 700;
  }
}


#menu-tree{
  margin-top: $tree-margin-top;
  margin-left: 10px;
  width: $tree-header-size;
  text-align: center;
}
#main-menu{
  width: $menu-width;
  height: 380px;
  position: absolute;
  margin-top: 5px;
  // left: $menu-left;
  background-color: white;
}
#main-background{
  position: absolute;
  background-color: #CCC;
  height: 960px;
  width: 100%;
  z-index: -1;
}


// RIGHT-CONTENT
$nav-height: 32px;
$nav-width: 720px;
$nav-margin-top: -60px;
#right-content{
  width: $nav-width;
  margin: -$main-menu-header-height auto;
}
#main-nav{
  // width: $nav-width;
  height: $nav-height;
  background-color: white;
  position: relative;
  color: gray;
}


#nav-mark{
  // margin-top: 10px;
  $size: 10px;
  position: absolute;
  top: ($nav-height - $size)/2;
  left: 20px;
  width: $size;
  height: $size;
  background-color: #409793;
  // line-height: 32px;
  // margin: auto auto auto 15px;
  // vertical-align: text-top;
  // background-origin: content-box;
  // background-clip: content-box;
  // position: relative;
  // display: inline;
}

$nav-font-size: 18px;
#nav-title{
  $size: $nav-font-size;
  font-size: $size;
  display: inline-block;
  top: ($nav-height - $size)/2;
  position: relative;
  left: 45px;
}

#nav-logout{
  $size: $nav-font-size;
  font-size: $size;
  position: absolute;
  top: ($nav-height - $size)/2;
  display: inline-block;
  // float: right;
  right: 16px;
}

#experiment-container{
  margin: 8px auto;
  // top:  + 5px;
  width: $nav-width;
  height: 720px;
  background-color: white;
  border-radius: 5px;
  // position: relative;
}

#experiment-list-container{
  position: relative;
  top: 60px;
  width: 100%;
  height: 650px;
}

.experiment-cell{
  margin: 0 auto;
  height: 72px;
  width: $nav-width - 40px;
  & + &{
    margin-top: 30px;
  }
}

.experiment-cell-title{
  font-size: 20px;
  font-weight: 700;
}

.experiment-cell-detail{
  font-family: '微软雅黑', msyh;
  padding-top: 8px;
  margin-top: 4px;
  height: 56px;
  width: $nav-width - 120px;
  background: -webkit-linear-gradient(top, rgba(254,254,254,1) 0%,rgba(240,240,240,1) 100%);
  border: solid 1px #DDD;
  box-shadow: 0px 0px 2px #888;
  border-radius: 4px;
}

.experiment-cell-detail-name{
  font-size: 16px;
  // line-height: 48px;
  left: 20px;
  top: 14px;
  position: relative;
  font-weight: 700;
  color: #766;
  // display: inline;
  // vertical-align: middle;
}

$progressbar-body-height: 6px;
$progressbar-body-width: 160px;
.experiment-cell-progressbar{
  width: 180px;
  top: -12px;
  left: 160px;
  position: relative;
}

.experiment-cell-progressbar-body{
  width: $progressbar-body-width;
  height: $progressbar-body-height;
  background-color: white;
  position: relative;
  background-color: #EEE;
  box-shadow: 1px 1px 1px #999 inset;
}

.experiment-cell-progressbar-circle{
  font-family: Arial;
  box-shadow: 0px 1px 0px #999 inset;
  position: relative;
  display: inline-block;
  $size: 28px;
  top: $progressbar-body-height/2 - $size/2;
  width: $size;
  height: $size;
  border-radius: $size;
  background-color: #EEE;
  line-height: $size;
  text-align: center;
  color: gray;
  & + &{
    margin-left: ($progressbar-body-width - $size*3)/2;
  }
  &.active{
    border: solid 2px #DDD;
    background-color: #A6937C;
    color: #EEE;
  }
}

.experiment-cell-progressbar-step{
  display: inline;
  position: relative;
  top: 10px;
  left: -2px;
  font-size: 12px;
  & + &{
    margin-left: 22px;
  }
}

.experiment-cell-teacher,.experiment-cell-date,.experiment-cell-remove{
  top: -18px;
  position: relative;
}
.experiment-cell-teacher{
  left: 180px;
}

.experiment-cell-date{
  left: 190px;
}

.experiment-cell-remove{
  left: 200px;
  top: -20px;
  i{
    font-size: 26px;
    vertical-align: middle;
  }
}
// CHARACTER-HELP
#character-panel{
  border-radius: 10px;
  // display: inline-block;
  margin: 0px auto 0;
  // transform:scale(0.5, 0.5);
  position: relative;
  // left: 100px;
  width: 1600*0.5+20px;  
  height: 960*0.5+20px;
  // border: solid 1px gray;
}

.character{
  width: 160px;
  height: 160px;
  // background-color: gray;
  background-image: url('<%= image_path("characters_all.png") %>');  
  background-repeat: no-repeat; /*我们并不想让它平铺*/
}

.character-key{  
  transform-origin: 0 0;  
  transform:scale(0.5, 0.5);  
  border: solid 1px #233333;
  &:hover{
    background-color: #EEE;
    cursor: pointer;
  }
  &:active{
    background-color: #BBB;
    cursor: pointer;
  }
}


@for $i from 0 to 59 {
  .character-#{$i}{ 
    background-position: -1*($i%10)*160px -1*floor($i/10)*160px;
  }
  .character-key.character-#{$i}{
    display: inline-block;
    position: absolute;
    left: ($i%10)*80+16px;
    top: floor($i/10)*80+16px;
  }
}

#character-info{
  margin: 0 auto;
  width: 320px;
  height: 320px;
  .character{
    display: inline-table;
    margin-left: -100px;
    transform-origin: 0 0;  
    transform:scale(2, 2);
  }
  .character-empty{
    background-image: none;
  }
  #character-meaning{
    display: inline-block;
    width: 240px;
    // width: 100%;
    height: 96px;
    text-align: center;
    line-height: 96px;
    font-size: 64px;
    margin-top: -10px;
    margin-left: 320px;
    border: dashed 3px #999;
    border-radius: 5px;
  }
}

