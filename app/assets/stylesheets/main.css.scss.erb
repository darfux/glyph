.glyph-screen{
  canvas{
    margin: 0 auto;
  }
}
#main-header{
  height: 130px;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-image: url("<%= image_path('main/header.jpg') %>");
}

#content{
  width: 1080px;
  margin: 0 auto;
}
$menu-width: 140px;
$menu-left: 30px;

#menu{
  width: 140px;
  position: relative;
  left: $menu-left;
  // left: $menu-left;
}

#main-menu-header{
  width: $menu-width;
  height: 60px;
  margin-top: -10px;
  background-image: url("<%= image_path('main/menu-header-background.png') %>"); ;
  text-align: center;
  line-height: 2.5em;
  color: #EEE;
  font-size: 24px;
  font-weight: 300;
  font-family: '微软雅黑', 'msyh';
}

$tree-color: #DDD;
$tree-header-size: 20px;
$tree-margin-top: 10px;
.tree-base-header{
  $size: $tree-header-size;
  width: $size;
  height: $size;
  border-radius: $size;
  border: solid 4px $tree-color;
}

$tree-body-padding-top: 15px;
$tree-body-padding-bottom: $tree-body-padding-top*2;
.tree-base-body{
  margin: -2px auto;
  padding-top: $tree-body-padding-top;
  padding-bottom: $tree-body-padding-bottom;
  width: 4px;
  background-color: $tree-color;
  text-align: center;
}

.tree-select:nth-child(1){
  margin-top: 15px;
}

$tree-select-size: 12px;
.tree-select{
  $size: $tree-select-size;
  margin-left: ($size/2 - 2px)*-1;
  & + &{
    margin-top: 40px;
  }
  width: $size;
  height: $size;
  background-color: $tree-color;
  border-radius: $size;
  &.active{
    background-color: darken($tree-color, 30%);
  }
}

#select-titles{
  position: absolute;
  top: $tree-margin-top + $tree-body-padding-top*2 + $tree-header-size - 6px;
  left: 45px;
}

.select-title{
  font-size: 18px;
  margin-bottom: 31px - (16px - $tree-select-size);
  font-family: '微软雅黑', msyh;
  color: darken($tree-color, 20%);
  &.active{
    color: #80CFCB;
    font-weight: 700;
  }
}


#menu-tree{
  margin-top: $tree-margin-top;
  margin-left: 10px;
  width: $tree-header-size;
  text-align: center;
}
#main-menu{
  width: $menu-width;
  height: 380px;
  position: absolute;
  margin-top: 5px;
  // left: $menu-left;
  background-color: white;
}
#main-background{
  position: absolute;
  background-color: #CCC;
  height: 960px;
  width: 100%;
  z-index: -1;
}

#main-nav{
  margin: -60px auto;
  width: 720px;
  height: 32px;
  background-color: white;
}




// CHARACTER-HELP
#character-panel{
  border-radius: 10px;
  // display: inline-block;
  margin: 0px auto 0;
  // transform:scale(0.5, 0.5);
  position: relative;
  // left: 100px;
  width: 1600*0.5+20px;  
  height: 960*0.5+20px;
  // border: solid 1px gray;
}

.character{
  width: 160px;
  height: 160px;
  // background-color: gray;
  background-image: url('<%= image_path("characters_all.png") %>');  
  background-repeat: no-repeat; /*我们并不想让它平铺*/
}

.character-key{  
  transform-origin: 0 0;  
  transform:scale(0.5, 0.5);  
  border: solid 1px #233333;
  &:hover{
    background-color: #EEE;
    cursor: pointer;
  }
  &:active{
    background-color: #BBB;
    cursor: pointer;
  }
}


@for $i from 0 to 59 {
  .character-#{$i}{ 
    background-position: -1*($i%10)*160px -1*floor($i/10)*160px;
  }
  .character-key.character-#{$i}{
    display: inline-block;
    position: absolute;
    left: ($i%10)*80+16px;
    top: floor($i/10)*80+16px;
  }
}

#character-info{
  margin: 0 auto;
  width: 320px;
  height: 320px;
  .character{
    display: inline-table;
    margin-left: -100px;
    transform-origin: 0 0;  
    transform:scale(2, 2);
  }
  .character-empty{
    background-image: none;
  }
  #character-meaning{
    display: inline-block;
    width: 240px;
    // width: 100%;
    height: 96px;
    text-align: center;
    line-height: 96px;
    font-size: 64px;
    margin-top: -10px;
    margin-left: 320px;
    border: dashed 3px #999;
    border-radius: 5px;
  }
}

