.character{
  width: 160px;
  height: 160px;
  // background-color: gray;
  background-image: url('<%= image_path("characters_all.png") %>');  
  background-repeat: no-repeat; /*我们并不想让它平铺*/
}

.character-key{  
  transform-origin: 0 0;  
  transform:scale(0.5, 0.5);  
  border: solid 1px #233333;
  &:hover{
    background-color: #EEE;
    cursor: pointer;
  }
  &:active{
    background-color: #BBB;
    cursor: pointer;
  }
}


@for $i from 0 to 59 {
  .character-#{$i}{ 
    background-position: -1*($i%10)*160px -1*floor($i/10)*160px;
  }
  .character-key.character-#{$i}{
    display: inline-block;
    position: absolute;
    left: ($i%10)*80+16px;
    top: floor($i/10)*80+16px;
  }
}

#character-info{
  margin: 0 auto;
  width: 320px;
  height: 320px;
  .character{
    display: inline-table;
    margin-left: -100px;
    transform-origin: 0 0;  
    transform:scale(2, 2);
  }
  .character-empty{
    background-image: none;
  }
  #character-meaning{
    display: inline-block;
    width: 240px;
    // width: 100%;
    height: 96px;
    text-align: center;
    line-height: 96px;
    font-size: 64px;
    margin-top: -10px;
    margin-left: 320px;
    border: dashed 3px #999;
    border-radius: 5px;
  }
}

